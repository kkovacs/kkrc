root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_style = tab
trim_trailing_whitespace = false

[{*.yml,*.yaml,*.json}]
indent_style = space
indent_size = 2

[*.{py,php,js,jsx,ts,tsx,css,less,sass,scss,vue}]
indent_style = space
indent_size = 4

[{*.go,Makefile,.gitmodules,go.mod,go.sum}]
indent_style = tab
