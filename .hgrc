[paths]
#default = ssh://user@server/path

[ui]
#username = KKovacs <kkovacs@kkovacs.eu>
verbose = True

[diff]
git = True

[pager]
pager = LESS='FSRX' less
attend = annotate, cat, diff, status, export, glog, log, qdiff

[extensions]
graphlog=
mq=
rebase= 
color=
convert=
pager=
purge=
record=
transplant=

[web]
